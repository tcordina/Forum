{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-4">
    <table class="table">
        <tr>
            <th>Category</th>
            <th>Subject</th>
        </tr>
        {% for post in posts %}
            <tr>
                <td style="font-size: 20px">{{ post.category.name }}</td>
                <td><a href="{{ path('post_show', { 'id': post.id}) }}">{{ post.title|slice(0, 40) }}<br/>{{ post.createdat|date('d/m/Y H:i') }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
